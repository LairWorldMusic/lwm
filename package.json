{
  "name": "vst3-audio-processor",
  "version": "1.0.0",
  "description": "Electron application for VST3 audio processing",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:8080 && electron .\"",
    "dev:renderer": "webpack serve --mode development",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "webpack --mode production",
    "pack": "npm run build:renderer && electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LairWorldMusic/lwm.git"
  },
  "keywords": ["electron", "vst3", "audio", "processor"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.lairworldmusic.vst3-processor",
    "productName": "VST3 Audio Processor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/preload.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "bugs": {
    "url": "https://github.com/LairWorldMusic/lwm/issues"
  },
  "homepage": "https://github.com/LairWorldMusic/lwm#readme",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "node-gyp": "^11.5.0",
    "node-addon-api": "^8.2.6",
    "style-loader": "^4.0.0",
    "wait-on": "^8.0.1",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}